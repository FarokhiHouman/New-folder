<UserControl x:Class="Slb.Production.Engineering.Views.Well.LabelControl"
             xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
             xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml">
  <DockPanel>
    <TextBlock x:Name="LabelText" VerticalAlignment="Center" MaxWidth="80" TextWrapping="WrapWithOverflow"
               Width="Auto" Text="{Binding Name}" Visibility="{Binding TextVisibility}"/>
  </DockPanel>
</UserControl>